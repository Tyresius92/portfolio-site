<% include ../partials/header %>

<div class="container">
    <h3 class="text-center">Create a new project</h3>
    <div class="container col-md-6">
        <form action="/projects" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="project[name]" placeholder="Project Name">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="project[url]" placeholder="Project URL">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="project[github]" placeholder="Github Repo">
            </div>
            <div class="form-group">
                <textarea class="form-control" name="project[blurb]" placeholder="Blurb"></textarea>
            </div>
            <div class="form-group">
                <textarea class="form-control" name="project[description]" placeholder="Description"></textarea>
            </div>
            <div class="form-group">
                <textarea class="form-control" name="project[technologies]" placeholder="Technologies"></textarea>
            </div>
            <div class="form-group">
                <textarea class="form-control" name="project[myRole]" placeholder="What I Did"></textarea>
            </div>
            <div class="form-group">
                <textarea class="form-control" name="project[lessons]" placeholder="What I Did"></textarea>
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Create Project!</button>
            </div>
        </form>
    </div>
</div>

<% include ../partials/footer %>