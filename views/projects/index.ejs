<% include ../partials/header %>

<div class="container">
    <div class="row text-center">
        <% projects.forEach(function(project) { %>
            <div class="col-md-3 col-sm-6">
                <div>
                    <h4><%= project.name %></h4>
                </div>
                <div>
                    <p><%= project.description %></p>
                </div>
                <p>
                    <a href="<%= project.url %>" class="btn btn-sm btn-primary">See the project!</a>
                    <a href="/projects/<%= project._id %>" class="btn btn-sm btn-info">More Info</a>
                </p>
            </div>
        <% }) %>
    </div>
</div>

<% include ../partials/footer %>