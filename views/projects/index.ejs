<% include ../partials/header %>

<div class="container">
    <div class="row text-center">
        <% projects.forEach(function(project) { %>
            <div class="col-md-4 col-sm-6">
                <div>
                    <h4><%= project.name %></h4>
                </div>
                <div>
                    <p><%= project.blurb %></p>
                </div>
                <p>
                    <a href="/projects/<%= project._id %>" class="btn btn-block btn-info"><i class="fas fa-binoculars float-left"></i>More Info</a>
                    <% if (project.url) { %>
                        <a href="<%= project.url %>" class="btn btn-block btn-success"><i class="far fa-eye float-left"></i>See the project!</a>
                    <% } %>
                </p>
            </div>
        <% }) %>
    </div>
</div>

<% include ../partials/footer %>